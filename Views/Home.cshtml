@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";
    var model = Model.Root();
    var dynamicList = model.Descendants<ContentModels.Dynamic>().Where(x => x.IsVisible());
    var verticalList = model.Descendants<ContentModels.Vertical>().Where(x => x.IsVisible());
    var bucketList = model.Descendants<ContentModels.BucketList>().Where(x => x.IsVisible());

}
<section class="banner_style" style="background-image: url(@Model.HomeBanner.Url());"style="margin-bottom: 0px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="banner_container">
                    <div class="container">
                        <h1><span> @Model.WelcomeNotes </span> @Model.Title</h1>
                        <div class="highlight">@Model.SubTitle</div>
                        <p>@Model.Description</p>
                        <a data-fancybox data-small-btn="true" class="btnFillup liquidbg"
                            href="@Model.Link.Url">
                            Watch Video
                            <div class="icon"></div>
                        </a>
                        <!--  -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--  -->

<section class="lot_more_style mb-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>@Model.TitleSA <span> @Model.SubTitleSA </span></h1>
            </div>
        </div>
        <div class="row animatedParent">
            <div class="col-md-4 col-12 left_content_wrp animated fadeInUpShort">
                @Model.DescriptionSA
            </div>
            <div class="col-md-7 offset-md-1 col-12 right_slider_wrp animated fadeInRightShort">
                <div class="Home_offer_slider">
                    @foreach (ContentModels.Dynamic item in dynamicList)
                    {
                        <div class="slide">
                            <div class="image_style">
                                <div class="caption">
                                    <h3>@item.Title</h3>
                                    <p>@item.Description</p>
                                </div>
                                <img src="@item.BackroundImage.Url()" class="image" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!--  -->

<!-- Vertical Slider -->

        <section>
            <div class="container-fuild">
                <div class="row">
                    <div class="col-12">
                        <div class="Slide_wrp">
                            <div class="slides">
								@foreach (ContentModels.Vertical item in verticalList)
								{
								    <div class="slide" style="background-image: url(@item.BackroundImage.Url());">
                                    <div class="caption_style">
                                        <h1>@item.Title</h1>
                                        <h2>@item.Description</h2>
                                        <div class="slide_btn">
                                            <a href="@item.Link.Url" tabindex="0"> Know More <i class="fa fa-long-arrow-right"></i> </a>
                                        </div>
                                    </div>
                                </div>  
								}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
<!--Bucket List-->

<section class="Bucket_list_style">
    <div class="container-fluid">
        <div class="row animatedParent">
            <div class="col-12 NoPadMar">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="sec_heading">
                                <h1>Bucket list Hotspots</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="Bucket_list animated fadeInRightShort">
							@foreach (ContentModels.BucketList item in bucketList)
							{
                            <div class="slide">
                                <div class="thumbnail_style">
                                    <div class="static_text">
                                        <h2>@item.Title</h2>
                                        <h1>@item.SubTitle</h1>
                                    </div>
                                    <div class="static_text_bottom">@item.Description</div>
                                    <img src="@item.BackgroundImage.Url()" />
                                    <div class="content_thumb">
                                        <div class="hover_content">
                                            <div class="sec_wrp">
                                                <div class="title">Best time to visit</div>
                                                <div class="month">@item.BestTimeToVisit</div>
                                            </div>
                                            <!--  -->
                                            <div class="sec_wrp">
                                                <div class="title">Known for</div>
                                                <p>@item.KnownFor</p>
                                            </div>
                                            <!--  -->
                                            <div class="sec_wrp" style="border: 0px;">
                                                <div class="title">Budget</div>
                                                <p>
													@item.Budget
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
							}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
