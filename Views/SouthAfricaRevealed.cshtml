						referrerpolicy="no-referrer-when-downgrade"></iframe>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Currency -->
<section class="Currency_style" id="Currency">
	<div class="container">
		<div class="row">
			<div class="col-12 center_text">
				<div class="left_content">
					<div class="sec_heading">
						<h1>@Model?.CurrencyTitle</h1>
					</div>
					<p>@Model?.CurrencyDescription</p> 
				</div>

				<div class="Currency_right">
					<div class="Rand_style">1 South African Rand equals</div>
					<div class="INR_style">4.91 Indian Rupee</div>
					<span> 12 Aug, 10:00 am UTC · Disclaimer </span>

					<div class="input_wrp_box">
						<div class="input_style"><input type="text" placeholder="1" /></div>
						<div class="right_map">South Africa Rand <img src="~/assets/images/south_africa.png" /></div>
					</div>

					<div class="input_wrp_box">
						<div class="input_style"><input type="text" placeholder="4.91" /></div>
						<div class="right_map">India <img src="~/assets/images/india.png" /></div>
					</div>

					<div class="clearfix"></div>

					<button class="btn_style">Convert</button>
				</div>
			</div>
		</div>
	</div>
</section>

