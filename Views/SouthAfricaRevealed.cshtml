    var model = Model.Root();
    var rainbownation = model.Descendants<ContentModels.Rainbow>().Where(x => x.IsVisible());
	var tasteOfAdventure = model.Descendants<ContentModels.Adventure>().Where(x => x.IsVisible());
}
<section class="banner_style revealed_bg" style="background-image:url(@Model?.RevealedImage.Url())">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="banner_container">
					<div class="container">
						<h1><span style="display: inline-block;"> @Model?.RevealedTitle </span> @Model?.RevealedSubtitle</h1>

						<!--  -->
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
