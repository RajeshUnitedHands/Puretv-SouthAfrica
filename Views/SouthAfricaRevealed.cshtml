				</div>

				<!--  -->

				<div class="revealded_thumb">
					<figure class="effect-lily">
						<img src="@Model?.WinterImage.Url()" />
						<figcaption>
							<div>
								<h2>@Model?.WinterTitle</h2>
								<p>@Model?.WinterContent</p>
							</div>
							<a href="#">View more</a>
						</figcaption>
					</figure>
				</div>
			</div>
		</div>
	</div>
</section>

